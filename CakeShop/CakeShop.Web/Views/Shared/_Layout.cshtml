@using CakeShop.Web.Common.Enums 

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CakeShop.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark navbar-custom border-bottom box-shadow mb-3">
            <div class="container">
                <img src="~/images/logo.png" style="margin-left: -170px; width: 7%" />
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse" style="margin-left: 1250px">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <div class="dropdown show">
                                <a class="nav-link text-dark dropdown-toggle" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i></a>
                                <div class="dropdown-menu color-beige dropdown-item-custom" aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item" href="@Url.Action("List", "Product", new { productType = (int)ProductType.Cake})">Cakes</a>
                                    <a class="dropdown-item" href="@Url.Action("List", "Product", new { productType = (int)ProductType.Drink})">Drinks</a>
                                    <a class="dropdown-item" href="@Url.Action("List", "Product", new { productType = (int)ProductType.Coffee})">Coffee</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Order" asp-action="List">Reservations</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Employee" asp-action="EmployeeList">Employees</a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Cart"><i class="fa fa-shopping-cart"></i></a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Profile"><i class="fa fa-user" aria-hidden="true"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area"" asp-controller="Account" asp-action="Login"><i class="fas fa-sign-in-alt"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
