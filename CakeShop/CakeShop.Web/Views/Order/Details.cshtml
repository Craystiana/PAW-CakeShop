@using CakeShop.Web.Models.Order

@model OrderViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "ReservationDetails";

    var itemNumber = 1;
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<body class="layout-custom">
    <h1 class="font-custom" style="text-align: center">Our Order</h1>
    <hr />
    <div class="container emp-profile">
        <form method="post">
            <div class="row">
                <div class="col-md-4">
                    <div class="profile-img">
                        <img src="../../images/logo.png" alt="" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="profile-head">
                        <h5>Order #@Model.OrderId</h5>
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Items</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row-custom">
                <div>
                    <div class="tab-content profile-tab" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <div class="row">
                                <div class="col-md-4">
                                    <label>Employee</label>
                                </div>
                                <div class="col-md-4">
                                    <p>@Model.Employee.LastName @Model.Employee.FirstName</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <label>Customer</label>
                                </div>
                                <div class="col-md-4">
                                    <p>@Model.Customer.LastName @Model.Customer.FirstName</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <label>Customer Phone Number</label>
                                </div>
                                <div class="col-md-4">
                                    <p>@Model.Customer.PhoneNumber</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <label>Customer Address</label>
                                </div>
                                <div class="col-md-4">
                                    <p>@Model.Customer.Address</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <label>Total Price</label>
                                </div>
                                <div class="col-md-4">
                                    <p>@Model.Products.Sum(p => p.ProductPrice * p.Quantity) RON</p>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                            @foreach(var product in Model.Products)
                             {
                                <div class="row">
                                    <div class="col-md-3">
                                        <label>Item #@(itemNumber++)</label>
                                    </div>
                                    <div class="col-md-4">
                                        <p>@product.ProductName</p>
                                    </div>
                                    <div class="col-md-4">
                                        <p>@product.Quantity</p>
                                    </div>
                                </div>
                             }
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
