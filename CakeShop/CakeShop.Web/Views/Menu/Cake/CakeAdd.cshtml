@model CakeShop.Web.Models.Menu.CakeViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "CakeAdd";
}

<body class="layout-custom">
    <section class="container-fluid">
        <section class="row justify-content-center">
            <div class="form-custom">
                <form asp-action="CakeAdd" class="form-container form-padding">
                    <h4 class="text-center font-weight-bold text-custom">Add a Cake</h4>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-custom">
                        <label asp-for="CakeName" class="control-label"></label>
                        <input asp-for="CakeName" class="form-control" />
                        <span asp-validation-for="CakeName" class="text-danger"></span>
                    </div>
                    <div class="form-group text-custom">
                        <label asp-for="CakePrice" class="control-label"></label>
                        <input asp-for="CakePrice" class="form-control" />
                        <span asp-validation-for="CakePrice" class="text-danger"></span>
                    </div>
                    <div class="form-group text-custom">
                        <label asp-for="CakeImage" class="control-label"></label>
                        <input asp-for="CakeImage" accept="image/*"/>
                        <span asp-validation-for="CakeImage" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Add Cake" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </section>
    </section>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
